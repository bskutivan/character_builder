<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
          <form>
            <h1>Create Account</h1>
            <span>or create an account below for registration</span>
            <input type="text" placeholder="Name" id="username-signup"/>
            <input type="password" placeholder="Password" id="password-signup"/>
            <button type="submit" class="signup-btn" onClick="signUpFormHandler(event)">Sign Up</button>
          </form>
        </div>
        <div class="form-container sign-in-container">
          <form>
            <h1>Sign in</h1>
            <span>or use your account</span>
            <input type="username" placeholder="username" id="username-login" />
            <input type="password" placeholder="Password" id="password-login" />
            <button type="submit" class="login-btn" onClick="loginFormHandler(event)">Sign In</button>
          </form>
        </div>
        <div class="overlay-container">
          <div class="overlay">
            <div class="overlay-panel overlay-left">
              <h1>Welcome Back!</h1>
              <p>Enter your username/password to log in!</p>
              <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
              <h1>Welcome!</h1>
              <p>If its your first visit please click below!</p>
              <button type="submit" class="ghost" id="signUp">Sign Up</button>
            </div>
          </div>
        </div>
      </div>
    </section>
      </section>
      <script src="./javascript/login_signUp.js"></script>
</body>
</html>