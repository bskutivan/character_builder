<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
          <form action="#">
            <h1>Create Account</h1>
            <div class="social-container">
              <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
              <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
              <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <span>or use your email for registration</span>
            <input type="text" placeholder="Name" id="username-signup"/>
            <input type="password" placeholder="Password" id="password-signup"/>
            <button onClick="signUpFormHandler(event)">Sign Up</button>
          </form>
        </div>
        <div class="form-container sign-in-container">
          <form action="#">
            <h1>Sign in</h1>
            <div class="social-container">
              <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
              <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
              <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <span>or use your account</span>
            <input type="username" placeholder="username" id="username-login" />
            <input type="password" placeholder="Password" id="password-login" />
            <button type="submit" onClick="loginFormHandler(event)">Sign In</button>
          </form>
        </div>
        <div class="overlay-container">
          <div class="overlay">
            <div class="overlay-panel overlay-left">
              <h1>Welcome Back!</h1>
              <p>Enter your username/password to log in!</p>
              <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
              <h1>Welcome!</h1>
              <p>Enter your information and then click below!</p>
              <button type="submit" class="ghost" id="signUp" onClick="signUpFormHandler()">Sign Up</button>
            </div>
          </div>
        </div>
      </div>
    </section>
      </section>
      <script src="./javascript/home.js"></script>
</body>
</html>